@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

@if (showAlert)
{
    <MudAlert Severity="Severity.Success" ContentAlignment="HorizontalAlignment.Center" ShowCloseIcon="true" CloseIconClicked="(() => ToggleAlert())">Time to call. Please close me!</MudAlert>
}
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.OpenInFull" OnClick="ToggleAlert" Color="Color.Secondary">Show Alert</MudButton>

@code {
    private int currentCount = 0;
    private bool showAlert = false;

    private void ToggleAlert()
    {
        showAlert = !showAlert;
    }

    private void IncrementCount()
    {
        currentCount++;
    }
}
